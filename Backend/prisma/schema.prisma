generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

enum Role {
  ADMIN
  MANAGER
  OPERATOR
  PROJECT_MANAGER
}

enum TaskStatus {
  TODO
  WORKING
  STUCK
  DONE
}

enum TaskPriority {
  HIGH
  MEDIUM
  LOW
}

model User {
  id               String        @id @default(cuid())
  email            String        @unique
  password         String
  role             Role
  createdAt        DateTime      @default(now())
  updatedAt        DateTime      @updatedAt
  enabled          Boolean       @default(true)
  // 1:1 optional employee profile (only for operators you show in "employees")
  ManagerEmployees Employee[]    @relation("ManagerEmployees")
  // tasks created by (if manager)
  tasksCreated     Task[]        @relation("TasksCreatedBy")
  // tasks assigned to (if operator)
  tasksAssigned Task[] @relation("TasksAssignedTo")
  TaskComment      TaskComment[]

  ExternalIdentity ExternalIdentity[]
  taskWorkLogs     TaskWorkLog[]
  attendances      UserAttendance[] @relation("UserAttendances")
}

model Employee {
  id         String   @id @default(cuid())
  userId     String   @unique
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  name       String
  managerId  String?
  manager    User?    @relation("ManagerEmployees", fields: [managerId], references: [id], onDelete: SetNull)
  roleTitle  String // "Senior Developer", "UI/UX Designer"
  department String? // "Engineering" / "Design" / "Operations"
  status     String   @default("Active") // Active / On Leave
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model Task {
  id            String       @id @default(cuid())
  title         String
  notes         String?
  dueDate       DateTime?
  priority      TaskPriority @default(MEDIUM)
  status        TaskStatus   @default(TODO)
  assignedHours Int? // from your dialog

  fileUrl_manager  String?
  fileUrl_operator String?
  isDeleted        Boolean  @default(false)
  // relations
  createdById      String?
  createdBy        User?   @relation("TasksCreatedBy", fields: [createdById], references: [id], onDelete: SetNull)

  assigneeId String?
  assignee   User?   @relation("TasksAssignedTo", fields: [assigneeId], references: [id], onDelete: SetNull)

  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  TaskComment  TaskComment[]
  taskWorkLogs TaskWorkLog[]

  @@index([assigneeId])
  @@index([createdById])
  @@index([status])
  @@index([priority])
}

model TaskWorkLog {
  id     String @id @default(cuid())
  taskId String
  task   Task   @relation(fields: [taskId], references: [id])

  userId String
  user   User   @relation(fields: [userId], references: [id])

  startTime DateTime
  endTime   DateTime?

  createdAt DateTime @default(now())
}

model TaskComment {
  id String @id @default(cuid())

  task   Task   @relation(fields: [taskId], references: [id], onDelete: Cascade)
  taskId String

  author   User   @relation(fields: [authorId], references: [id], onDelete: Cascade)
  authorId String

  content String

  // Track whether the comment has been seen by each role
  seenByAssignee Boolean @default(false)
  seenByManager  Boolean @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([taskId])
  @@index([authorId])
}

model ExternalIdentity {
  id        String   @id @default(cuid())
  provider  String // e.g. "keycloak"
  subject   String // The Keycloak 'sub' claim (unique per user)
  email     String   @unique
  userId    String?
  user      User?    @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
}


model UserAttendance {
  id        String   @id @default(cuid())

  userId    String
  user      User     @relation("UserAttendances", fields: [userId], references: [id], onDelete: Cascade)

  // üìÖ Day-based tracking (VERY important)
  workDate DateTime

  // ‚è± Core times
  loginTime  DateTime
  logoutTime DateTime?

  // üßò Break handling
  breakStartTime DateTime?
  breakEndTime   DateTime?
  totalBreakMinutes Int @default(0)

  // üßÆ Calculated fields (optional but useful)
  totalWorkingMinutes Int? // excluding breaks

  // üîê Safety flags
  isActiveSession Boolean @default(true) // false after logout

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  breakLogs BreakLog[] @relation("AttendanceBreakLogs")

  @@unique([userId, workDate]) // ONE attendance per user per day
  @@index([userId])
  @@index([workDate])
}

model BreakLog {
  id           String   @id @default(cuid())

  attendanceId String
  attendance   UserAttendance @relation("AttendanceBreakLogs", fields: [attendanceId], references: [id], onDelete: Cascade)

  breakStart   DateTime
  breakEnd     DateTime?

  createdAt DateTime @default(now())

  @@index([attendanceId])
}
